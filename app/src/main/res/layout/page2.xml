<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/altitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altitude"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/FIND"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="FIND" />


    </LinearLayout>

    <ImageView
        android:id="@+id/welcome"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/welcome"
        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <ImageView
            android:id="@+id/suwon_layout"
            android:layout_width="500dp"
            android:layout_height="500sp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:src="@drawable/suwon" />

        <ImageView
            android:id="@+id/namsan_layout"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:src="@drawable/frontpage" />

        <ImageView
            android:id="@+id/lotte_layout"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:src="@drawable/lotte" />

        <ImageView
            android:id="@+id/changduk_layout"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:src="@drawable/changduk" />

        <ImageView
            android:id="@+id/myungdong_layout"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:src="@drawable/myungdong" />


    </RelativeLayout>



</LinearLayout>